doctype html
html(lang="en").no-js
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    title m o n t e
    meta(name="description", content="m o n t e")
    include _head.jade

  body#index
    a(href="#main").visuallyhidden Skip to main content
    .container
      //- sky is not the limit
      header.header.page-section
        .row
          .columns
            p.jumbo-text#intro-text The sky is not the limit
            p.date June 17th, 2015
            p.time 5:00 pm - 8:00pm
            h1.h1
              span Celebrate with
              img(src="images/archer-logo.png", alt="", title="Archer Communications", width="206", height="54")
            a#rsvp-btn(href="#rsvp-form").rsvp-btn.btn RSVP <img src="images/arrow-down.png" alt=""/>

      main#main
        //- rsvp form - red
        #rsvp-form.rsvp-form-div.page-section
          .row
            .columns
              h2.title Join us as we celebrate reaching new heights!
              p Please Enter:
              .rsvp-form
                input(type="text", placeholder="Full Name", name="full_name")
                input(type="text", placeholder="Company")
                input(type="email", placeholder="E-Mail")
              a(href="#choose-your-ride").btn Next

        //- choose your ride
        #choose-your-ride
          .how-will-you-get-there
            .row.page-section
              .columns
                h2.title How will you get there?
          .choose-your-ride
            .row.page-section
              .columns
                h3.title Choose Your Ride
                ul.choose-your-ride-list.small-block-grid-1.medium-block-grid-3
                  li
                    div
                      figure.ride
                        img(src="images/mary-poppins.png", alt="Umbrella")
                        figcaption Mary Poppin's Umbrella
                      .ride-actions
                        a(href="#") More Info
                        a(href="#") This is my ride
                  li
                    div
                      figure.ride
                        img(src="images/millenium-falcon.png", alt="alt")
                        figcaption The Millenium Falcon
                      .ride-actions
                        a(href="#") More Info
                        a(href="#") This is my ride
                  li
                    div
                      figure.ride
                        img(src="images/elevator.png", alt="alt")
                        figcaption An Elevator
                      .ride-actions
                        a(href="#") More Info
                        a(href="#") This is my ride

        #confirmation.confirmation.page-section
          .row
            .columns
              .row
                .columns.medium-8
                  .thank-you-message
                    h2#thank-you-text.thank-you-text That's no moon Luis, it's...
                    p.the-strathallan The Strathallan
                  .confirmation-extras.row
                    .columns.medium-5
                      p.see-you-there See you there!
                      a(href="#").btn.get-directions-btn Get directions
                    .columns.medium-7
                      p.date-time-reminder June 17th, 2015 <br/>5:00pm - 8:00pm
                      a(href="#").add-to-calendar Add to calendar
                        img(src="images/calendar-icon.png", alt="").left


      footer.footer
        p.copyright 2015 &copy; Archer Communications

    include _scripts.jade
